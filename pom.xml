    <modelVersion>4.0.0</modelVersion>

    <groupId>org.dimyriy</groupId>
    <artifactId>todomvc-backend</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>war</packaging>

    <profiles>
        <profile>
            <id>tests-unit</id>
            <activation>
                <activeByDefault>
                    true
                </activeByDefault>
            </activation>
            <properties>
                <unit-tests.skip>false</unit-tests.skip>
                <integration-tests.skip>true</integration-tests.skip>
            </properties>
        </profile>
        <profile>
            <id>tests-all</id>
            <properties>
                <unit-tests.skip>false</unit-tests.skip>
                <integration-tests.skip>false</integration-tests.skip>
            </properties>
        </profile>
        <profile>
            <id>tests-integration</id>
            <properties>
                <unit-tests.skip>true</unit-tests.skip>
                <integration-tests.skip>false</integration-tests.skip>
            </properties>
        </profile>
    </profiles>

    <repositories>
        <repository>
            <id>spring-libs</id>
            <url>https://repo.spring.io/libs-release</url>
        </repository>
        <repository>
            <id>spring-snapshots</id>
            <url>https://repo.spring.io/snapshot</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <releases>
                <enabled>false</enabled>
            </releases>
        </repository>
        <repository>
            <id>jboss</id>
            <url>https://repository.jboss.org/nexus/content/groups/public/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>

    <properties>
        <jdk.version>1.8</jdk.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <springdata.version>2.4.2.RELEASE</springdata.version>
        <springdatajpa.version>1.9.2.RELEASE</springdatajpa.version>
        <jetty.version>9.3.7.v20160115</jetty.version>
        <spring.version>4.2.5.RELEASE</spring.version>
        <jackson.version>2.7.1-1</jackson.version>
        <hsqldb.version>2.3.3</hsqldb.version>
        <slf4j.version>1.7.16</slf4j.version>
        <hibernate.version>5.1.0.Final</hibernate.version>
        <javax.servlet-api.version>3.1.0</javax.servlet-api.version>
        <commons-pool.version>2.1.1</commons-pool.version>
        <junit.version>4.12</junit.version>
        <mockito.version>1.10.19</mockito.version>
        <jsonpath.version>2.1.0</jsonpath.version>
        <hamcrest.version>1.3</hamcrest.version>
        <log4j.version>1.2.17</log4j.version>
        <assertj.version>3.3.0</assertj.version>
        <gson.version>2.3.1</gson.version>
        <guava.version>18.0</guava.version>
        <catch-exception.version>1.4.4</catch-exception.version>
        <rest-assured.version>2.8.0</rest-assured.version>
        <dbunit.version>2.5.1</dbunit.version>
        <spring-test-dbunit.version>1.2.0</spring-test-dbunit.version>
        <spring-composed.version>1.0.0.BUILD-SNAPSHOT</spring-composed.version>
    </properties>

